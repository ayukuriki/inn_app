<div class ="show-container">
    <div class ="info-container">
        <div>
           <%= image_tag 'default_room.jpg', class:"image-container" %>
        </div>
        <div class ="room-info-container">
            <div>
            <%= image_tag 'default_icon.jpg', class:"user-image" %>
            </div>
            <div class ="room-info">
            <h5><%= @room.name %></h5>
            <p><%= @room.address %></p>
            </div>
        </div>
        <div class ="room-introduction-container">
            <div class ="introduction">
            <p><%=@room.introduction %></p>
            </div>
        </div>

    </div>
    <div class ="booking-container">
        <div class= "form-card">
            <%= form_with model: @booking, method: :post, url: confirm_booking_path do |f| %>
                <h3>￥<%= @room.price.to_i %>/日</h3>       
                <table>
                <tr>
                <th><%= f.label :start_date ,"開始日"%></th>
                </tr>
                <tr>
                <td><%= f.date_field :start_date ,class: "room-form",placeholder: "年/月/日"  %></td>
                </tr>
                
                <tr>
                <th><%= f.label :end_date ,"終了日"%></th>
                </tr>
                <tr>
                <td><%= f.date_field :end_date, class: "room-form",  placeholder: "年/月/日" %></td>
                </tr>
                
                <tr>
                <th><%= f.label :name ,"人数"%></th>
                </tr>
                <tr>
                <td><%= f.text_field :people, class: "room-form" %></td>
                </tr>                
                </table>

                <%= f.hidden_field :price, :value => @room.price %>
                
                <%= f.hidden_field :room_id, :value => @room.id %>
                <%= f.hidden_field :room_name, :value => @room.name %>
                <%= f.hidden_field :room_image, :value => @room.image %>
                <%= f.hidden_field :room_intro, :value => @room.introduction %>
                <%= f.hidden_field :user_id, :value => current_user.id %>
                <%= f.submit "予約をする", class: "btn btn-primary"  %>
                <% end %>
                </div>
                </div>
                </div>