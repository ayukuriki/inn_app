<!DOCTYPE html>
<html>
  <head>
    <title>InnApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header>
   <%= link_to image_tag("/assets/logo.png"), root_path %>
   
    <%= form_with model: @room, url:rooms_path, :method => 'get' do |f| %>    
      <%= text_field_tag :area, params[:area] ,placeholder: "エリア", id: "header-searchbox", class:"bi bi-geo-alt-fill" %>
      <%= text_field_tag :keyword, params[:keyword], placeholder: "キーワード", id:"header-searchbox" %>
    <% end %>



   <% if current_user= nil %>
    <div class ="login">
      <span><%= current_user.name %><span>
      <span>メニュー</span>
        <nav>
          <ul>
            <li><%= link_to "ルーム登録" ,new_room_path %></li>
            <li><%= link_to "予約済みルーム一覧"  %></li>
            <li><%= link_to "登録済みルーム一覧",room_path   %></li>
            <li><%= link_to "設定", user_path  %></li>
            <li><%= link_to "ログアウト", logout_path, method: :delete %></li>
          </ul>
        </nav>
    </div>
   <% else %>
      <div class ="unlogin">
        <%= link_to "ログイン" ,login_path ,class:"btn btn-primary" %>
        <%= link_to "登録する", new_user_path, class: "btn btn-secondary" %>
      </div>
   <% end %>
   
  </header>

   <%= notice %>
   <%= alert %>

    <%= yield %>
  
    <footer>
    <p>© 2020 POTEPAN.INC.</p>
    </footer>
  </body>
</html>
