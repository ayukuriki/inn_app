
<div class ="main-container">
<div class="container">

    <div class="search-container">
        <h2>Potepan Shareでまだ体験したことのない旅をしよう</h2>
        <p>エリア</p>

        <%= form_with model: @room  do |f| %>
            <ul>  
                <li><%= f.text_field :area,placeholder: "東京" %></li>
                <li><%= link_to "探す" ,class: 'btn btn-primary' %></li>
            </ul>
        <% end %>
        </div>
    </div>
</div>
<div class ="second-container">
    <h2>おすすめのエリア</h2>
    <div class ="area-container">
        <div class ="area">
        <%= link_to "", rooms_path(area: '東京') %>
        <p class="area-label">東京</p>
        </div>

        <div class ="area">
        <%= link_to "", rooms_path(area: '大阪') %>
        <p class="area-label">大阪</p>
        </div>

        <div class ="area">
        <%= link_to "", rooms_path(area: '京都') %>
        <p class="area-label">京都</p>
        </div>

        <div class ="area">
        <%= link_to "", rooms_path(area: '札幌') %>
        <p class="area-label">札幌</p>
        </div>

    </div>
</div>